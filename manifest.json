{
	"author":"Ansley Peduru",
	"manifest_version": 2,
	"name":"Rain Man",
	"version":"0.1",
	"description":"Toggle playing rain music",

	"browser_action": {
		"default_icon": {
			"16":"icon16.png",
			"128":"icon128.png"
		},
		"default_title":"Rain Man"
	},

	"icons": {
		"16":"icon16.png",
		"128":"icon128.png"
	},

	"background": {
		"scripts":[
			"resources/jquery-2.1.4.js",
			"bootstrap.js"
		]
	},

	"content_security_policy": "script-src 'self' https://www.youtube.com/iframe_api https://s.ytimg.com/; object-src 'self'",
	"permissions":[
		"<all_urls>",
		"tabs",
		"alarms"
	]
}
